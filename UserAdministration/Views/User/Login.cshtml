<script src="~/js/login.js" asp-append-version="true"></script>

@model UserAdministration.Application.Models.User.UserLoginDTO

@{
    Layout = null;
}

<h1>Login</h1>
<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" id="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" id="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" onclick=loginUser()>Login</button>
                <button class="btn btn-secondary" onclick=clearView("#login")>Close</button>
            </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
